#include <iostream>
#include <ctime>
#include <cstdlib>

using namespace std;

int main()
{
	char response;
	int total, dealertotal, hit, ace, dealerhit;
	bool understand=true;
	while((true))
	{
		cin>>response;//Hit or Stand
		
		if(response=='h')//Hit
		{
			understand=true;
			hit = (rand() %13+ 1);
			if(hit==1)
			{	cout<<"Ace(1/11): ";
				cin>>ace;
                total+=ace;
                ace=0;
			}
			if(hit==11)
			{
			    total+=10;
			}
			if(hit==12)
			{
			    total+=10;
			}
			if(hit==13)
			{
			    total+=10;
			}
			else
			{
			    total+=hit; 
			}
        cout<<"Total: "<<total;
		}
		else if(response=='s')//Stand
		{
			understand=true;
		}
    }
	
	
	
	return 0;
}
